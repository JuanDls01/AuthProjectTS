import { verify } from 'jsonwebtoken';
import { NextFunction, Request, Response } from 'express';
import config from '../../lib/config';

export const JWTAtuhenticator = async (req: Request, res: Response, next: NextFunction):
Promise<Response> => {
    try {
        const authHeader: string = req.headers['authorization']; // Here we found the JWT;
        const token = authHeader && authHeader.split(' ')[1];
        if(token === null) return res.send({error: 'No token provides'})
        // Now we check if the token is validate:
        verify(token, config.publicKey, (err, user) => {
            // if the token is invalid, we send an error
            if(err) return res.send({error: 'Invalid token, logout'});
            // if the token is valid, we continue.
            // req.user = user;
            next();
        })
    } catch (err) {
        console.log(err)
    }
}